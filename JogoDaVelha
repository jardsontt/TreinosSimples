#include <iostream>

using namespace std;

bool verificaLinha(char *vetor){
    if(vetor[0] == vetor[1] and vetor[1] == vetor[2]) return true;
    else if(vetor[3] == vetor[4] and vetor[4] == vetor[5]) return true;
    else if(vetor[6] == vetor[7] and vetor[8] == vetor[5]) return true;
    else return false;
}
bool verificaColuna(char *vetor){
    if(vetor[0] == vetor[3] and vetor[3] == vetor[6]) return true;
    else if(vetor[1] == vetor[4] and vetor[4] == vetor[7]) return true;
    else if(vetor[2] == vetor[5] and vetor[5] == vetor[8]) return true;
    else return false;
}
bool verificaVertical(char *vetor){
    if(vetor[0] == vetor[4] and vetor[4] == vetor[8]) return true;
    else if(vetor[2] == vetor[4] and vetor[4] == vetor[6]) return true;
    else return false;
}
void printVetor(char *vetor){
    for(int i = 0; i < 9; i++){
        cout << " " << vetor[i] << " | ";
        if(i == 2 or i == 5 or i == 8) cout << '\n';
    }
}

int main()
{
    int escolha = 0;
    int i;
    char jogo[9] = {'1', '2', '3', '4', '5', '6', '7', '8', '9'};
    printVetor(jogo);
    for(i = 0; i < 9; i++){
        if(i%2 == 0){ 
            cout << "Jogador 1 escolha uma posição de 1 a 9: "; 
            cin >> escolha;
            jogo[escolha - 1] = 'X';
            printVetor(jogo);
            }
        else{ 
            cout << "Jogador 2 escolha uma posição de 1 a 9: ";
            cin >> escolha;
            jogo[escolha - 1] = '0';
            printVetor(jogo);
            }
        if(i>=5 and (verificaVertical(jogo) == true or verificaColuna(jogo) == true or verificaVertical(jogo) == true)){
         cout << "Temos um vencedor\n";
         break;
        }
    }
    if(i = 8) cout << "draw";
    return 0;
}
